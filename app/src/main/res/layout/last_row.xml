<?xml version="1.0" encoding="utf-8"?>
<TableRow  android:padding="5dp" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:background="@drawable/table_row_last_bg" android:id="@+id/last_row"
    android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_total_price" android:layout_gravity="center"
        android:textDirection="rtl" android:padding="11dp"
        android:textStyle="italic"
        android:textSize="15sp" android:textColor="@color/colorAccent"
        android:layout_span="5"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</TableRow>