<TableRow android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:paddingRight="2dp"
    android:paddingLeft="2dp"
    android:background="@drawable/table_row_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout  android:layout_width="wrap_content" android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView  android:text="@string/ProductName"
            android:background="@drawable/table_cell_bg"
            android:layout_width="0dp" android:layout_weight="2"
            android:gravity="center"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="0dp" android:layout_weight="0.8"

            android:layout_height="match_parent" android:layout_gravity="center"
            android:background="@drawable/table_cell_bg"
            >

            <Spinner
                android:text="2" android:gravity="center"
                android:layout_width="0dp" android:layout_weight="0.8"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
        <TextView  android:text="Price"
            android:background="@drawable/table_cell_bg"
            android:layout_width="0dp" android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            />

    </LinearLayout>
</TableRow>