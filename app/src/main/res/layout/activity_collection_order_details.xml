<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/activity_order_details"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.mts.mea.nodust_app.orders.ShowDetailsOrder.CollectionOrderDetails"
android:orientation="vertical">
<android.support.design.widget.AppBarLayout
    android:id="@+id/ll_Bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

</android.support.design.widget.AppBarLayout>
<LinearLayout
    android:gravity="center_horizontal"
    android:layout_marginBottom="20dp"
    android:layout_alignParentBottom="true"
    android:id="@+id/ll_actions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <Button
        android:layout_weight="1"
        android:id="@+id/btn_notDeliver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:layout_marginRight="5dp"
        android:text="@string/NotDeliver"
        android:textAllCaps="false"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/btn_partial"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginRight="5dp"
        android:text="@string/PartialDeliver"
        android:visibility="gone"
        android:textAllCaps="false"
        android:textColor="@android:color/white"/>
    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/btn_deliver"
        android:background="@android:color/holo_green_dark"
        android:text="@string/Deliver"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginRight="5dp"
        />

    <Button
        android:visibility="gone"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/btn_cancelation"
        android:background="@color/colorAccent"
        android:text="@string/Cancelation"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_marginRight="5dp"
        />


</LinearLayout>
<ScrollView  android:layout_width="match_parent" android:layout_above="@+id/ll_actions" android:layout_below="@+id/ll_Bar"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_below="@+id/ll_Bar"
        android:layout_above="@+id/ll_actions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_group1"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/DriveID"
                        android:textColor="@color/colorPrimary"
                        android:theme="@style/TextLabel"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/tv_driveID"
                        android:textColor="@color/colorBlack"
                        android:theme="@style/textBox"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_margin="10dp" android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/CardNo"
                        android:textColor="@color/colorPrimary"
                        android:theme="@style/TextLabel"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/tv_cardNo"
                        android:textColor="@color/colorBlack"
                        android:theme="@style/textBox" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_margin="10dp" android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/RecieptNo"
                        android:textColor="@color/colorPrimary"
                        android:theme="@style/TextLabel"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/tv_RecNo"
                        android:textColor="@color/colorBlack"
                        android:theme="@style/textBox" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_margin="10dp" android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/CustomerName"
                        android:textColor="@color/colorPrimary"
                        android:theme="@style/TextLabel"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/tv_custName"
                        android:textColor="@color/colorBlack"
                        android:maxLines="2"
                        android:theme="@style/textBox"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_margin="10dp" android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/AreaName"
                        android:textColor="@color/colorPrimary"
                        android:theme="@style/TextLabel"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/tv_areaName"
                        android:textColor="@color/colorBlack"
                        android:theme="@style/textBox"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/CustomerAddress"
                        android:textColor="@color/colorPrimary"
                        android:theme="@style/TextLabel"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:id="@+id/tv_area2Name"
                        android:textColor="@color/colorBlack"
                        android:theme="@style/textBox"
                        />
                </LinearLayout>

                <LinearLayout android:layout_gravity="end" android:visibility="gone" android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" android:orientation="horizontal">
                    <TextView android:gravity="end" android:layout_gravity="end" android:visibility="gone"
                        android:id="@+id/tv_showMore"
                        android:text="@string/ShowMore"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_group2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/STREET_NAME"
                            android:textColor="@color/colorPrimary"
                            android:theme="@style/TextLabel"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/tv_StreetName"
                            android:textColor="@color/colorBlack"
                            android:maxLines="2"
                            android:theme="@style/textBox"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="match_parent" android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/FLAT_NO"
                                android:textColor="@color/colorPrimary"
                                android:theme="@style/TextLabel"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:id="@+id/tv_FlatNo"
                                android:textColor="@color/colorBlack"
                                android:maxLines="2"
                                android:theme="@style/textBox"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="match_parent" android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/FLOOR_NO"
                                android:textColor="@color/colorPrimary"
                                android:theme="@style/TextLabel"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:id="@+id/tv_FloorNo"
                                android:textColor="@color/colorBlack"
                                android:maxLines="2"
                                android:theme="@style/textBox"/>
                        </LinearLayout>
                        <LinearLayout android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/HOME_NO"
                                android:textColor="@color/colorPrimary"
                                android:theme="@style/TextLabel"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:id="@+id/tv_HomeNo"
                                android:textColor="@color/colorBlack"
                                android:maxLines="2"
                                android:theme="@style/textBox"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="10dp" android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/REMARKS"
                            android:textColor="@color/colorPrimary"
                            android:theme="@style/TextLabel"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/tv_Remarks"
                            android:textColor="@color/colorBlack"
                            android:maxLines="2"
                            android:theme="@style/textBox"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="10dp" android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/OperationComment"
                            android:textColor="@color/colorPrimary"
                            android:theme="@style/TextLabel"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/tv_operationComment"
                            android:textColor="@color/colorBlack"
                            android:maxLines="2"
                            android:theme="@style/textBox"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_margin="10dp" android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dataComment"
                            android:textColor="@color/colorPrimary"
                            android:theme="@style/TextLabel"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/tv_dataComment"
                            android:textColor="@color/colorBlack"
                            android:maxLines="2"
                            android:theme="@style/textBox"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp" android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/FU_Note"
                            android:textColor="@color/colorPrimary"
                            android:theme="@style/TextLabel"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/tv_FUNote"
                            android:textColor="@color/colorBlack"
                            android:maxLines="2"
                            android:theme="@style/textBox"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView android:id="@+id/car_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_totalPrice"

                        />

                    <TableLayout android:id="@+id/tab_PenaltyProduct"
                        android:stretchColumns="*" android:visibility="gone"
                        android:layout_width="match_parent" android:layout_marginBottom="25dp"
                        android:layout_height="wrap_content">
                        <TableRow android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp" android:paddingRight="2dp"
                            android:paddingLeft="2dp"
                            android:background="@drawable/table_row_bg"
                            >
                            <LinearLayout  android:layout_width="0dp"
                                android:layout_weight="1" android:id="@+id/ll_penalty"
                                android:layout_height="match_parent">
                                <TextView  android:text="@string/ProductName"
                                    android:background="@drawable/table_cell_bg"
                                    android:layout_width="0dp" android:layout_weight="2"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorPrimaryDark"/>
                                <TextView  android:text="@string/NoWeek"
                                    android:background="@drawable/table_cell_bg"
                                    android:layout_width="0dp" android:layout_weight="0.8"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorPrimaryDark"/>
                                <TextView  android:text="Price"
                                    android:background="@drawable/table_cell_bg"
                                    android:layout_width="0dp" android:layout_weight="1"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorPrimaryDark"/>

                            </LinearLayout>
                        </TableRow>
                    </TableLayout>


                    <TableLayout android:id="@+id/tab_product"
                        android:layout_marginTop="10dp"
                        android:stretchColumns="*"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TableRow android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:paddingRight="2dp"
                            android:paddingLeft="2dp"
                            android:background="@drawable/table_row_bg"
                            >
                            <LinearLayout  android:layout_width="0dp" android:layout_weight="1"
                                android:layout_height="match_parent">
                                <TextView  android:text="@string/Invoice_NO"
                                    android:background="@drawable/table_cell_bg"
                                    android:layout_width="0dp"
                                    android:layout_weight="1.2"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorPrimaryDark"/>
                                <TextView  android:text="@string/date"
                                    android:background="@drawable/table_cell_bg"
                                    android:layout_width="0dp" android:layout_weight="1"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorPrimaryDark"/>
                                <TextView  android:text="@string/Price"
                                    android:background="@drawable/table_cell_bg"
                                    android:layout_width="0dp" android:layout_weight="1"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorPrimaryDark"/>
                                <TextView  android:text="@string/Paid"
                                    android:background="@drawable/table_cell_bg"
                                    android:layout_width="0dp" android:layout_weight="1"
                                    android:gravity="center"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorPrimaryDark"/>
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>

                </LinearLayout>

            </ScrollView>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
</RelativeLayout>
